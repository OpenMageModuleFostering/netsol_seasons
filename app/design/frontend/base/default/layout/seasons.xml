<layout version="0.1.0">   
	<cms_index_index>
		<reference name="head">
			<action method="addItem" ifconfig="pa_seasonssetting/pa_seasons/enable"><type>skin_css</type><name>css/netsol/seasons/owl.carousel.css</name></action>
			<action method="addItem" ifconfig="pa_seasonssetting/pa_seasons/enable"><type>skin_css</type><name>css/netsol/seasons/owl.theme.css</name></action>
			<action method="addItem" ifconfig="pa_seasonssetting/pa_seasons/enable"><type>skin_css</type><name>css/netsol/seasons/paseasons.css</name></action>		
			<action method="addItem" ifconfig="pa_seasonssetting/pa_seasons/enable"><type>skin_css</type><name>css/netsol/seasons/seasons.css</name></action>
			<action method="addItem" ifconfig="pa_seasonssetting/pa_seasons/enabled_jquery"><type>skin_js</type><name>js/netsol/seasons/jquery-1.10.2.min.js</name></action>
			<action method="addItem" ifconfig="pa_seasonssetting/pa_seasons/enable"><type>skin_js</type><name>js/netsol/seasons/noconflict.js</name></action>
			<action method="addItem" ifconfig="pa_seasonssetting/pa_seasons/enable"><type>skin_js</type><name>js/netsol/seasons/owl.carousel.js</name></action>
			<action method="addItem" ifconfig="pa_seasonssetting/pa_seasons/enable"><type>skin_js</type><name>js/netsol/seasons/paseasons.js</name></action>
		</reference>
		<reference name="content">
			<block type="seasons/paseasons" before="-" name="paseasons-banner" as="paseasons-banner" template="seasons/seasonbanner/paseasonsbanner.phtml" />
			<block type="seasons/paseasons" name="paseasons" as="paseasons" template="seasons/paseasons.phtml" />
		</reference>
	</cms_index_index>
</layout>   
	
